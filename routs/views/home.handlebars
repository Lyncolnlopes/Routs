<h1>Usu√°rios cadastrados:</h1>

<div class="container">
    {{#each users}}
    <div class="item">
        <h2>{{this.name}}</h2>
        <p>{{this.occupation}}</p>
        <div class="actions">
          <button type="button" class="btn btn-primary">
              <a href="/users/{{this.id}}">Saiba mais</a>
          </button>
           <button type="button" class="btn btn-warning">
              <a href="/users/edit/{{this.id}}">Editar</a>
          </button>
          <form action="/users/delete/{{this.id}}" method="POST">
                <input type="submit" value="Excluir" class="btn-danger">
          </form>
        </div>
    </div>
    {{/each}}
</div>